@*@{
        Layout = null;
    }*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Aria Chat</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />
    <style>
        /** {
            border: 1px solid black;
        }*/

        body {
            height: 100vh;
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            background-image: url("../Static/pinguin.jpg");
            background-repeat: repeat;
        }

        p {
            word-wrap: break-word;
        }

        .flex {
            flex: 1;
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }

        footer {
            margin-bottom: 5px;
        }

        #discussion {
            border: 1px solid blue;
            border-radius: 5px;
            flex-direction: column;
            display: flex;
            flex: 1;
            padding: 5px;
            margin: 5px 0;
            overflow-y: auto;
            overflow-x: hidden;
            background-color: whitesmoke;
        }
    </style>
</head>
<body class="container">
    <input type="hidden" id="displayname" />
    <div class="flex">
        <div id="discussion"></div>
    </div>
    <footer>
        <input type="text" class="form-control" id="message" />
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        var json_payload = @Html.Raw(Json.Encode(ViewBag.payload));
        $(function () {
            var inc = 0;

            json_payload.forEach(function(x) {
                inc++;
                $('#discussion').append('<p id="' + inc + '"><strong>[' + htmlEncode(ParseDate(x.DateTime).getDateTimeFR()) + '] ' + htmlEncode(x.Username)+ '</strong>: ' + htmlEncode(x.Content) + '</p>');
            });

            var chat = $.connection.chatHub;
            chat.client.addNewMessageToPage = function (name, message) {
                inc++;
                $('#discussion').append('<p id="' + inc + '">'
                    +'<strong>[' + new Date().getDateTimeFR()
                    + '] '
                    + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</p>');
                $("#discussion").animate({
                    scrollTop: $("#discussion")[0].scrollHeight
                }, "slow");
            };
            $('#displayname').val(prompt('Enter your name:', ''));

            $('#message').focus();
            $.connection.hub.start().done(function () {
                $('#message').keyup(function (e) {
                    if (e.which === 13) {
                        chat.server.send($('#displayname').val(), $('#message').val());
                        $('#message').val('').focus();
                    }
                });
            });
        });
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
    <script>
        var ParseDate = function (dateStr)
        {
            var l_dateStr = /\d{13}/.exec(dateStr);

            if (l_dateStr.length === 1)
                return new Date(parseInt(l_dateStr[0], 10));

            return new Date("Invalid Date");
        };

        /**
        * RETOURNE UNE STRING DE LA DATE ET L'HEURE ACTUELLE AU FORMAT FRANÇAIS
        * returns {String} : JJ/MM/AAAA HH:MM
        */
        Date.prototype.getDateTimeFR = function ()
        {
            var now = this;
            return [_AffZero(now.getHours()), _AffZero(now.getMinutes())].join(':');
        };

        /**AFFICHE UN ZÉRO SI LE NOMBRE PASSÉ EN PARAMÈTRE EST INFÉRIEUR À 10
        * param {Number} nombre
        * returns {String} chaine au format numérique
        */
        var _AffZero = function (nombre)
        {
            if (!isNaN(nombre)) {
                if (nombre < 10) {
                    return "0" + nombre;
                }
                return "" + nombre;
            }
            return nombre;
        };
    </script>
</body>
</html>
